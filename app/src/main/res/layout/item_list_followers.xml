<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_photo_followers"
        android:layout_width="109dp"
        android:layout_height="99dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="#4186A5"
        app:civ_border_width="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textview_user_name_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="@string/user_name"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageview_photo_followers"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_ajout_followers"
        android:layout_width="54dp"
        android:layout_height="47dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_followers"
        tools:layout_editor_absoluteX="360dp"
        tools:layout_editor_absoluteY="107dp" />

    <TextView
        android:id="@+id/textview_nb_photo_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/_0"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/textview_publication"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_nb_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/_0"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/textview_"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_publication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:text="@string/follow"
        app:layout_constraintStart_toEndOf="@+id/imageview_photo_followers"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/followersf"
        app:layout_constraintStart_toEndOf="@+id/imageview_photo_followers"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
